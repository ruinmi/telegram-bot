[Unit]
Description=Telegram Bot
After=network.target

[Service]
User=test
Group=test
WorkingDirectory=/opt/telegram-bot
Environment="PYTHONPATH=/opt/telegram-bot/src"
ExecStart=/opt/telegram-bot/.venv/bin/uvicorn telegram_bot.web_server:app --host 0.0.0.0 --port 8080
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
